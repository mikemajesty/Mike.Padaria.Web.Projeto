@model  IEnumerable<Padaria.Dominio.Entidades.Usuarios>

@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/MasterPage/Home/_Home.cshtml";
}

<h2>Listar</h2>
<p>
    @Html.ActionLink("Criar Novo", "Cadastrar", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr style="background-color:yellow">
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Permissao.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UltimoAcesso)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Permissao.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UltimoAcesso)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { UsuarioID = item.UsuarioID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detales", "Detales", new { UsuarioID = item.UsuarioID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Deletar", "Deletar", new { UsuarioID = item.UsuarioID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
