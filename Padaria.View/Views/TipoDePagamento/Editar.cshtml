@model Padaria.Dominio.Entidades.TipoPagamento

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/MasterPage/Home/_Home.cshtml";
}

<h2>Editar</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TipoPagamento</legend>

        @Html.HiddenFor(model => model.TipoPagamentoID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Tipo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tipo)
            @Html.ValidationMessageFor(model => model.Tipo)
        </div>

        <p>
            <input type="submit" value="Editar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Listar")
</div>
