@model IEnumerable<Padaria.Dominio.Entidades.TipoPagamento>

@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/MasterPage/Home/_Home.cshtml";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Criar Novo", "Cadastrar", null, new {@class="btn btn-success" })
</p>
<table class="table">
    <tr style="background-color:yellow">
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { TipoPagamentoID = item.TipoPagamentoID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Detales", "Detales", new { TipoPagamentoID = item.TipoPagamentoID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Deletar", "Deletar", new { TipoPagamentoID = item.TipoPagamentoID }, new { @class = "btn btn-primary" })
            </td>

        </tr>
    }

</table>
